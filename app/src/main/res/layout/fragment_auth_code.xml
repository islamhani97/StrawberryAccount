<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ui.fragments.AuthCodeFragment">


        <com.islam.strawberryaccount.views.VerificationCodeEditText
            android:id="@+id/fragment_auth_code_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"

            app:digitCompleteStrokeColor="@color/colorSecondary"
            app:digitStyle="rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textColor="@color/colorSecondary" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>