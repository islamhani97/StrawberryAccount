<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StrawberryAccount" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Primary-->
        <item name="colorPrimary">@color/theme_color_1</item>
        <item name="colorPrimaryVariant">@color/theme_color_2</item>
        <item name="colorPrimaryDark">@color/theme_color_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary-->
        <item name="colorSecondary">@color/theme_color_3</item>
        <item name="colorSecondaryVariant">@color/theme_color_4</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--Surface-->
        <item name="colorSurface">@color/theme_color_2</item>
        <item name="colorOnSurface">@color/white</item>
        <!--Background-->
        <item name="android:colorBackground">@color/theme_color_2</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="fontFamily">@font/cairo_semi_bold</item>
    </style>

    <style name="DialogTheme">

    </style>

    <style name="LabeledTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/shape_labeled_text_view</item>
    </style>

    <style name="LabeledTextViewLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="VerificationCodeEditTextStyle">
       <item name="digitTextColor">@color/theme_color_3</item>
        <item name="digitPlaceholderColor">@color/white</item>
        <item name="digitStrokeColor">@color/white</item>
        <item name="digitFilledStrokeColor">@color/theme_color_3</item>
    </style>
</resources>